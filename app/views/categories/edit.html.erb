<h2>Edit Category</h2>
<%= simple_form_for @category do |f| %>
<br/>
<%= render :partial => 'form', :locals => {:f => f} %>
<%= f.input '包含频道' do %>
  <%= f.select :channel_ids, Channel.all.map { |r| [r.name, r.id] }, {:include_blank => false}, { :multiple => true, :size => 3 } %><br />
<% end %>
<span>
	<%= f.submit '提交', :class => 'btn btn-primary' %>
	<%= link_to '返回', categories_path, :class => 'btn' %>
</span>

<% end %>
